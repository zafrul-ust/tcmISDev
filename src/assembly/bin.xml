<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <formats>
  	<format>tar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
  	<fileSet>
  	  <directory>target/tcmIS</directory>
  	  <outputDirectory>webapps/tcmIS</outputDirectory>
  	  <excludes>
  	    <exclude>WEB-INF/lib/labelprinter*.jar</exclude>
  	    <exclude>help/**</exclude>
  	  </excludes>
  	  <directoryMode>0755</directoryMode>
  	  <fileMode>0755</fileMode>
  	</fileSet>
  	<fileSet>
  	  <directory>html</directory>
  	  <outputDirectory>html</outputDirectory>
  	  <excludes>
  	  	<exclude>reports/**</exclude>
  	  </excludes>
  	  <directoryMode>0755</directoryMode>
  	  <fileMode>0755</fileMode>
  	</fileSet>
  	<fileSet>
  	  <directory>html/reports</directory>
  	  <outputDirectory>html/reports</outputDirectory>
  	  <directoryMode>0775</directoryMode>
  	  <fileMode>0775</fileMode>
  	</fileSet>
  	<fileSet>
  	  <directory>target/html</directory>
  	  <outputDirectory>html</outputDirectory>
  	  <directoryMode>0755</directoryMode>
  	  <fileMode>0755</fileMode>
  	</fileSet>
  </fileSets>
</assembly>